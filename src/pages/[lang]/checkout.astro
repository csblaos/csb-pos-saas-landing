---
import Base from '../../layouts/Base.astro';
import Navbar from '../../components/sections/Navbar.astro';
import Button from '../../components/common/Button.astro';
import { ArrowLeft, CheckCircle } from 'lucide-react';
import { getLangFromUrl, languages } from '../../lib/lang';
import { buildWhatsAppLink, storeSettings } from '../../data/store';

export async function getStaticPaths() {
  return Object.keys(languages).map(lang => ({ params: { lang } }));
}

const lang = getLangFromUrl(Astro.url);
const { plan } = Astro.url.searchParams;
const planName = plan ? plan.charAt(0).toUpperCase() + plan.slice(1) : 'Pro';
const confirmPaymentMessage = `I have transferred the payment for ${planName} plan.`;
const confirmPaymentWhatsappLink = buildWhatsAppLink(storeSettings.whatsapp.paymentSupport, confirmPaymentMessage);
---

<Base title={`Checkout - ${planName} Plan | AstroPOS`}>
  <Navbar />
  
  <main class="min-h-[80vh] flex items-center justify-center bg-[#f0f0f0] dark:bg-gray-900 py-20 px-4">
    <div class="max-w-2xl w-full">
      <div class="mb-8">
        <a href={`/${lang}/packages`} class="font-bold underline flex items-center gap-2 hover:text-gray-600 dark:text-gray-300 dark:hover:text-white">
           <ArrowLeft size={20} />
           Back to Packages
        </a>
      </div>

      <div class="bg-white dark:bg-black border-4 border-black dark:border-white shadow-[12px_12px_0px_0px_black] dark:shadow-[12px_12px_0px_0px_white] p-8 md:p-12 relative overflow-hidden">
        
        <div class="absolute top-0 right-0 p-4 bg-lime-300 text-black border-b-2 border-l-2 border-black font-black">
          SECURE CHECKOUT
        </div>

        <h1 class="text-4xl font-black mb-2 text-black dark:text-white">Complete Your Order</h1>
        <p class="text-xl font-bold text-gray-500 mb-8">Plan: <span class="bg-black text-white px-2 py-1 dark:bg-white dark:text-black">{planName}</span></p>

        <div class="space-y-6">
          <div class="p-6 bg-blue-50 dark:bg-blue-900 border-2 border-black dark:border-white text-black dark:text-white">
            <h3 class="font-bold mb-4 flex items-center gap-2">
              <CheckCircle className="text-blue-600 dark:text-blue-300" />
              Method 1: Bank Transfer (Recommended)
            </h3>
            <div class="font-mono text-sm bg-white dark:bg-black p-4 border border-black dark:border-white mb-4">
              Bank: BCEL (Banque pour le Commerce Exterieur Lao)<br/>
              Account: 123-123-456-789<br/>
              Name: ASTRO POS SYSTEMS<br/>
            </div>
            <p class="text-sm font-bold">Transfer the amount and send the slip via WhatsApp below.</p>
          </div>

          <div class="text-center text-black dark:text-white">
            <p class="font-black text-lg mb-4">OR</p>
          </div>
          
          <div class="text-center">
            <a 
              href={confirmPaymentWhatsappLink}
              target="_blank"
              class="inline-flex items-center gap-2 bg-[#25D366] text-white px-8 py-4 font-bold border-2 border-black dark:border-white shadow-[4px_4px_0px_0px_black] dark:shadow-[4px_4px_0px_0px_white] hover:translate-y-1 hover:shadow-[2px_2px_0px_0px_black] dark:hover:shadow-[2px_2px_0px_0px_white] transition-all"
            >
              Confirm Payment via WhatsApp
            </a>
            <p class="mt-4 text-xs font-bold text-gray-500">
              *Your account will be activated within 15 minutes of payment confirmation.
            </p>
          </div>
        </div>
      </div>
    </div>
  </main>
</Base>
