---
import Base from '../../layouts/Base.astro';
import Navbar from '../../components/sections/Navbar.astro';
import Footer from '../../components/sections/Footer.astro';
import PricingSelect from '../../components/islands/PricingSelect';
import { getLangFromUrl, languages } from '../../lib/lang';
import { t } from '../../data/i18n';

export async function getStaticPaths() {
  return Object.keys(languages).map(lang => ({ params: { lang } }));
}

const lang = getLangFromUrl(Astro.url);

// Feature comparison rows: value can be true, false, or a string
const comparison = [
  { feature: t('packages.comparison.users', lang),    start: '1-2',      pro: '3-5',                                          biz: t('packages.comparison.unlimited', lang) },
  { feature: t('packages.comparison.channels', lang),  start: 'Facebook', pro: t('packages.comparison.allChannels', lang),      biz: t('packages.comparison.allApi', lang) },
  { feature: t('packages.comparison.stock', lang),     start: true,       pro: true,                                           biz: true },
  { feature: t('packages.comparison.printer', lang),   start: false,      pro: true,                                           biz: true },
  { feature: t('packages.comparison.reports', lang),   start: t('packages.comparison.basic', lang), pro: t('packages.comparison.advanced', lang), biz: t('packages.comparison.realtime', lang) },
  { feature: t('packages.comparison.orders', lang),    start: '100/mo',   pro: t('packages.comparison.unlimited', lang),        biz: t('packages.comparison.unlimited', lang) },
  { feature: t('packages.comparison.domain', lang),    start: false,      pro: false,                                          biz: true },
  { feature: t('packages.comparison.support', lang),   start: false,      pro: true,                                           biz: 'VIP 24/7' },
  { feature: t('packages.comparison.api', lang),       start: false,      pro: false,                                          biz: true },
  { feature: t('packages.comparison.training', lang),  start: false,      pro: true,                                           biz: '1-on-1' },
];
---

<Base title="Packages & Pricing | AstroPOS" image="/images/og/og-packages.png">
  <Navbar />
  
  <main class="py-12 md:py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 w-full">
      <div class="text-center mb-12 md:mb-16">
        <h1 class="text-4xl md:text-5xl font-black uppercase mb-4">{t('packages.title', lang)}</h1>
        <p class="text-lg md:text-xl text-gray-600 font-semibold">{t('packages.subtitle', lang)}</p>
      </div>

      <PricingSelect client:load lang={lang} />
      
      {/* Neo-Brutalist Feature Comparison Table */}
      <div id="comparison" class="mt-12 md:mt-24 max-w-5xl mx-auto scroll-mt-20">
        <h2 class="text-3xl md:text-4xl font-black text-center mb-3 uppercase">{t('packages.comparison.title', lang)}</h2>
        <p class="text-center text-gray-500 font-semibold mb-10">{t('packages.comparison.subtitle', lang)}</p>
        
        <div class="overflow-x-auto border-1 border-black shadow-[2px_2px_0px_0px_black]">
          <table class="w-full text-left border-collapse bg-white min-w-[600px]">
            <thead>
              <tr class="bg-black text-white">
                <th class="p-4 md:p-5 border-r-2 border-gray-700 font-black uppercase tracking-wider text-sm w-[40%]">Feature</th>
                <th class="p-4 md:p-5 border-r-2 border-gray-700 text-center font-black uppercase tracking-wider text-sm">Starter</th>
                <th class="p-4 md:p-5 border-r-2 border-gray-700 text-center font-black uppercase tracking-wider text-sm text-lime-400 bg-gray-900">
                  <div class="flex flex-col items-center gap-1">
                    <span class="text-[10px] bg-lime-400 text-black px-2 py-0.5 font-black">POPULAR</span>
                    <span>Professional</span>
                  </div>
                </th>
                <th class="p-4 md:p-5 text-center font-black uppercase tracking-wider text-sm">Premium</th>
              </tr>
            </thead>
            <tbody>
              {comparison.map((row, i) => (
                <tr class={`
                  border-t-2 border-black/10 
                  ${i % 2 === 0 ? 'bg-gray-50' : 'bg-white'}
                  hover:bg-lime-50 transition-colors duration-150
                `}>
                  {/* Feature Name */}
                  <td class="p-4 md:p-5 border-r-2 border-black/10 font-bold text-sm">{row.feature}</td>
                  
                  {/* Starter */}
                  <td class="p-4 md:p-5 border-r-2 border-black/10 text-center">
                    {row.start === true ? (
                      <span class="inline-flex items-center justify-center w-7 h-7 bg-lime-400 border-1 border-black text-black text-xs font-black">✓</span>
                    ) : row.start === false ? (
                      <span class="inline-flex items-center justify-center w-7 h-7 bg-gray-100 border-1 border-gray-300 text-gray-300 text-xs font-black">—</span>
                    ) : (
                      <span class="text-sm font-semibold">{row.start}</span>
                    )}
                  </td>
                  
                  {/* Professional (highlighted column) */}
                  <td class={`p-4 md:p-5 border-r-2 border-black/10 text-center ${i % 2 === 0 ? 'bg-lime-50' : 'bg-lime-50/50'}`}>
                    {row.pro === true ? (
                      <span class="inline-flex items-center justify-center w-7 h-7 bg-lime-400 border-1 border-black text-black text-xs font-black">✓</span>
                    ) : row.pro === false ? (
                      <span class="inline-flex items-center justify-center w-7 h-7 bg-gray-100 border-1 border-gray-300 text-gray-300 text-xs font-black">—</span>
                    ) : (
                      <span class="text-sm font-semibold text-lime-700">{row.pro}</span>
                    )}
                  </td>
                  
                  {/* Premium */}
                  <td class="p-4 md:p-5 text-center">
                    {row.biz === true ? (
                      <span class="inline-flex items-center justify-center w-7 h-7 bg-lime-400 border-1 border-black text-black text-xs font-black">✓</span>
                    ) : row.biz === false ? (
                      <span class="inline-flex items-center justify-center w-7 h-7 bg-gray-100 border-1 border-gray-300 text-gray-300 text-xs font-black">—</span>
                    ) : (
                      <span class="text-sm font-semibold">{row.biz}</span>
                    )}
                  </td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </main>
  <Footer />
</Base>
