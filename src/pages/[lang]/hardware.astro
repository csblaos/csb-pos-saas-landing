    <!-- Warranty Section -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-24">
        <div class="grid md:grid-cols-3 gap-8 text-center bg-[var(--color-bg-card)] border-2 border-[var(--color-border)] p-12 shadow-[8px_8px_0px_0px_var(--color-shadow)]">
