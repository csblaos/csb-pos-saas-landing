---
import Base from '../../layouts/Base.astro';
import Navbar from '../../components/sections/Navbar.astro';
import Footer from '../../components/sections/Footer.astro';
import Button from '../../components/common/Button.astro';
import { getLangFromUrl, languages } from '../../lib/lang';
import { t } from '../../data/i18n';
import { Search, Book, Video, MessageCircle, Mail, Phone } from 'lucide-react';

export async function getStaticPaths() {
  return Object.keys(languages).map(lang => ({ params: { lang } }));
}

const lang = getLangFromUrl(Astro.url);

const categories = [
  {
    icon: Book,
    title: { en: 'Getting Started', th: 'เริ่มต้นใช้งาน', la: 'ເລີ່ມຕົ້ນການນຳໃຊ້' },
    desc: { en: 'Setup your account and hardware', th: 'การตั้งค่าบัญชีและอุปกรณ์', la: 'ການຕັ້ງຄ່າບັນຊີ ແລະ ອຸປະກອນ' },
    color: 'bg-blue-100 dark:bg-blue-900 text-blue-600 dark:text-blue-300'
  },
  {
    icon: Video,
    title: { en: 'Video Tutorials', th: 'วิดีโอสอนใช้งาน', la: 'ວິດີໂອສອນການນຳໃຊ້' },
    desc: { en: 'Step-by-step video guides', th: 'คู่มือการใช้งานแบบวิดีโอ', la: 'ຄູ່ມືການນຳໃຊ້ແບບວິດີໂອ' },
    color: 'bg-pink-100 dark:bg-pink-900 text-pink-600 dark:text-pink-300'
  },
  {
    icon: MessageCircle,
    title: { en: 'FAQ', th: 'คำถามที่พบบ่อย', la: 'ຄຳຖາມທີ່ພົບເລື້ອຍ' },
    desc: { en: 'Common questions & answers', th: 'รวมคำถามและคำตอบทั่วไป', la: 'ລວມຄຳຖາມ ແລະ ຄຳຕອບທົ່ວໄປ' },
    color: 'bg-lime-100 dark:bg-lime-900 text-lime-700 dark:text-lime-300'
  }
];

const faqs = [
  { q: t('faq.q1', lang), a: t('faq.a1', lang) },
  { q: t('faq.q2', lang), a: t('faq.a2', lang) },
  { q: t('faq.q3', lang), a: t('faq.a3', lang) },
];
---

<Base title="Help Center | AstroPOS">
  <Navbar />

  <main class="py-20 min-h-screen">
    <!-- Hero Search -->
    <div class="bg-[var(--color-bg-card)] border-b-2 border-[var(--color-border)] py-16 mb-16">
      <div class="max-w-4xl mx-auto px-4 text-center">
        <h1 class="text-4xl md:text-6xl font-black mb-6 uppercase">
          {lang === 'th' ? 'ศูนย์ช่วยเหลือ' : lang === 'la' ? 'ສູນຊ່ວຍເຫຼືອ' : 'Help Center'}
        </h1>
        <p class="text-xl mb-8 opacity-70 font-bold">
          {lang === 'th' ? 'เราจะช่วยอะไรคุณได้บ้าง?' : lang === 'la' ? 'ເຮົາຊ່ວຍຫຍັງເຈົ້າໄດ້ແດ່?' : 'How can we help you today?'}
        </p>
        
        <div class="relative max-w-2xl mx-auto">
          <input 
            type="text" 
            placeholder={lang === 'th' ? 'ค้นหาปัญหาของคุณ...' : lang === 'la' ? 'ຄົ້ນຫາບັນຫາຂອງທ່ານ...' : 'Search for help...'}
            class="w-full p-4 pl-12 border-2 border-[var(--color-border)] rounded-none shadow-[4px_4px_0px_0px_var(--color-shadow)] focus:outline-none focus:translate-y-[2px] focus:shadow-[2px_2px_0px_0px_var(--color-shadow)] transition-all bg-[var(--color-bg)] text-[var(--color-text)] font-bold"
          />
          <Search class="absolute left-4 top-1/2 -translate-y-1/2 text-gray-400" size={24} />
        </div>
      </div>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 w-full">
      
      <!-- Quick Categories -->
      <div class="grid md:grid-cols-3 gap-8 mb-20">
        {categories.map((cat) => (
          <div class="p-8 border-2 border-[var(--color-border)] bg-[var(--color-bg-card)] hover:-translate-y-1 hover:shadow-[6px_6px_0px_0px_var(--color-shadow)] transition-all cursor-pointer group">
            <div class={`w-12 h-12 ${cat.color} rounded-none flex items-center justify-center mb-4 border-2 border-transparent group-hover:border-[var(--color-border)]`}>
              <cat.icon size={24} />
            </div>
            <h3 class="text-xl font-black mb-2">{cat.title[lang as 'en'|'th'|'la']}</h3>
            <p class="text-sm opacity-70 font-medium">{cat.desc[lang as 'en'|'th'|'la']}</p>
          </div>
        ))}
      </div>

      <!-- FAQ Section -->
      <div class="max-w-3xl mx-auto mb-20">
        <h2 class="text-3xl font-black mb-8 text-center uppercase">
          {t('faq.title', lang)}
        </h2>
        <div class="space-y-4">
          {faqs.map((f) => (
             <details class="group bg-[var(--color-bg-card)] border-2 border-[var(--color-border)] open:shadow-[4px_4px_0px_0px_var(--color-shadow)] open:mb-4 transition-all duration-200">
               <summary class="flex justify-between items-center p-6 font-bold cursor-pointer list-none text-[var(--color-text)]">
                 <span>{f.q}</span>
                 <span class="transform group-open:rotate-180 transition-transform">▼</span>
               </summary>
               <div class="px-6 pb-6 text-gray-600 dark:text-gray-300 font-medium leading-relaxed border-t-2 border-[var(--color-border)] pt-4 bg-[var(--color-bg)]/50">
                 {f.a}
               </div>
             </details>
          ))}
        </div>
      </div>

      <!-- Contact Support -->
      <div class="bg-black text-white p-12 border-2 border-black shadow-[8px_8px_0px_0px_var(--color-shadow)] text-center dark:bg-white dark:text-black">
        <h2 class="text-3xl font-black mb-6">
          {lang === 'th' ? 'ยังไม่เจอคำตอบ?' : lang === 'la' ? 'ຍັງບໍ່ພົບຄຳຕອບ?' : 'Still stuck?'}
        </h2>
        <div class="flex flex-col md:flex-row justify-center gap-6">
          <Button href="#" variant="primary" class="flex gap-2 items-center justify-center">
             <MessageCircle size={20} /> Chat Support
          </Button>
          <Button href="mailto:support@astropos.com" class="bg-white text-black border-2 border-black hover:bg-gray-100 dark:bg-black dark:text-white dark:border-white flex gap-2 items-center justify-center">
             <Mail size={20} /> Email Us
          </Button>
        </div>
      </div>

    </div>
  </main>
  <Footer />
</Base>
