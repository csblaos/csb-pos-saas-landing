---
import Base from '../../layouts/Base.astro';
import Navbar from '../../components/sections/Navbar.astro';
import Footer from '../../components/sections/Footer.astro';
import { getLangFromUrl, languages } from '../../lib/lang';
import { t } from '../../data/i18n';
import { buildWhatsAppLink, storeSettings } from '../../data/store';
import { fromLang, helpCategoriesCopy, helpPageCopy } from '../../data/localizedCopy';
import { Search, Book, Video, MessageCircle, Mail } from 'lucide-react';

export async function getStaticPaths() {
  return Object.keys(languages).map(lang => ({ params: { lang } }));
}

const lang = getLangFromUrl(Astro.url);
const helpCopy = fromLang(helpPageCopy, lang);
const categoryCopy = fromLang(helpCategoriesCopy, lang);

const categories = [
  {
    icon: Book,
    title: categoryCopy[0].title,
    desc: categoryCopy[0].desc,
    color: 'bg-blue-100 text-blue-600'
  },
  {
    icon: Video,
    title: categoryCopy[1].title,
    desc: categoryCopy[1].desc,
    color: 'bg-pink-100 text-pink-600'
  },
  {
    icon: MessageCircle,
    title: categoryCopy[2].title,
    desc: categoryCopy[2].desc,
    color: 'bg-lime-100 text-lime-700'
  }
];

const faqs = [
  { q: t('faq.q1', lang), a: t('faq.a1', lang) },
  { q: t('faq.q2', lang), a: t('faq.a2', lang) },
  { q: t('faq.q3', lang), a: t('faq.a3', lang) },
];

const supportMessage = helpCopy.supportMessage;
const supportWhatsappLink = buildWhatsAppLink(storeSettings.whatsapp.paymentSupport, supportMessage);
---

<Base seoKey="help">
  <Navbar />

  <main class="py-20 min-h-screen">
    <!-- Hero Search -->
    <div class="bg-[var(--color-bg-card)] border-b-2 border-[var(--color-border)] py-16 mb-16">
      <div class="max-w-4xl mx-auto px-4 text-center">
        <h1 class="text-4xl md:text-6xl font-black mb-6 uppercase">
          {helpCopy.heroTitle}
        </h1>
        <p class="text-xl mb-8 opacity-70 font-bold">
          {helpCopy.heroSubtitle}
        </p>
        
        <div class="relative max-w-2xl mx-auto">
          <input 
            type="text" 
            placeholder={helpCopy.searchPlaceholder}
            class="w-full p-4 pl-12 border-1 border-[var(--color-border)] rounded-none shadow-[2px_2px_0px_0px_var(--color-shadow)] focus:outline-none focus:translate-y-[2px] focus:shadow-[2px_2px_0px_0px_var(--color-shadow)] transition-all bg-[var(--color-bg)] text-[var(--color-text)] font-bold"
          />
          <Search className="pointer-events-none absolute left-4 top-1/2 -translate-y-1/2 text-gray-400" size={24} />
        </div>
      </div>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 w-full">
      
      <!-- Quick Categories -->
      <div class="grid md:grid-cols-3 gap-8 mb-20">
        {categories.map((cat) => (
          <div class="p-8 border-1 border-[var(--color-border)] bg-[var(--color-bg-card)] hover:-translate-y-1 hover:shadow-[2px_2px_0px_0px_var(--color-shadow)] transition-all cursor-pointer group">
            <div class={`w-12 h-12 ${cat.color} rounded-none flex items-center justify-center mb-4 border-1 border-transparent group-hover:border-[var(--color-border)]`}>
              <cat.icon size={24} />
            </div>
            <h3 class="text-xl font-black mb-2">{cat.title}</h3>
            <p class="text-sm opacity-70 font-medium">{cat.desc}</p>
          </div>
        ))}
      </div>

      <!-- FAQ Section -->
      <div class="max-w-3xl mx-auto mb-20">
        <h2 class="text-3xl font-black mb-8 text-center uppercase">
          {t('faq.title', lang)}
        </h2>
        <div class="space-y-4">
          {faqs.map((f) => (
             <details class="group bg-[var(--color-bg-card)] border-1 border-[var(--color-border)] open:shadow-[2px_2px_0px_0px_var(--color-shadow)] open:mb-4 transition-all duration-200">
               <summary class="flex justify-between items-center p-6 font-bold cursor-pointer list-none text-[var(--color-text)]">
                 <span>{f.q}</span>
                 <span class="transform group-open:rotate-180 transition-transform">â–¼</span>
               </summary>
               <div class="px-6 pb-6 text-gray-600 font-medium leading-relaxed border-t-2 border-[var(--color-border)] pt-4 bg-[var(--color-bg)]/50">
                 {f.a}
               </div>
             </details>
          ))}
        </div>
      </div>

      <!-- Contact Support -->
      <section class="relative overflow-hidden border-1 border-black bg-[var(--color-bg-card)] p-6 md:p-10 shadow-[2px_2px_0px_0px_black]">
        <div class="absolute -top-10 -right-8 w-32 h-32 bg-lime-300 border-1 border-black rotate-12 opacity-80"></div>
        <div class="absolute -bottom-8 -left-8 w-24 h-24 bg-pink-300 border-1 border-black -rotate-12 opacity-80"></div>

        <div class="relative grid lg:grid-cols-[1.1fr_1fr] gap-8 items-start">
          <div>
            <span class="inline-flex items-center px-3 py-1 text-xs font-black uppercase bg-black text-white border border-black">
              Support
            </span>
            <h2 class="mt-4 text-3xl md:text-4xl font-black uppercase text-[var(--color-text)]">
              {helpCopy.stuckTitle}
            </h2>
            <p class="mt-3 text-sm md:text-base font-semibold text-gray-700">
              {storeSettings.emails.support}
            </p>
            <p class="text-sm md:text-base font-semibold text-gray-700">
              +{storeSettings.whatsapp.paymentSupport}
            </p>
          </div>

          <div class="grid gap-3">
            <a
              href={supportWhatsappLink}
              class="group flex items-center justify-between w-full px-5 py-4 bg-lime-400 text-black border-1 border-black shadow-[2px_2px_0px_0px_black] hover:translate-x-[2px] hover:translate-y-[2px] hover:shadow-[2px_2px_0px_0px_black] transition-all"
            >
              <span class="inline-flex items-center gap-3 font-black uppercase">
                <MessageCircle size={20} />
                {helpCopy.chatSupport}
              </span>
              <span class="text-xs font-black uppercase opacity-80">WhatsApp</span>
            </a>

            <a
              href={`mailto:${storeSettings.emails.support}`}
              class="group flex items-center justify-between w-full px-5 py-4 bg-white text-black border-1 border-black shadow-[2px_2px_0px_0px_black] hover:translate-x-[2px] hover:translate-y-[2px] hover:shadow-[2px_2px_0px_0px_black] transition-all"
            >
              <span class="inline-flex items-center gap-3 font-black uppercase">
                <Mail size={20} />
                {helpCopy.emailUs}
              </span>
              <span class="text-xs font-black uppercase opacity-80">Email</span>
            </a>
          </div>
        </div>
      </section>

    </div>
  </main>
  <Footer />
</Base>
