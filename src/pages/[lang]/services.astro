---
import Base from '../../layouts/Base.astro';
import Navbar from '../../components/sections/Navbar.astro';
import Button from '../../components/common/Button.astro';
import { MonitorSmartphone, BarChart, Printer, Globe } from 'lucide-react';
import { getLangFromUrl, languages } from '../../lib/lang';
import { t } from '../../data/i18n';

export async function getStaticPaths() {
  return Object.keys(languages).map(lang => ({ params: { lang } }));
}

const lang = getLangFromUrl(Astro.url);

const services = [
  {
    icon: MonitorSmartphone,
    title: t('services.multiChannel', lang),
    desc: t('services.multiChannel.desc', lang),
    color: "bg-blue-100 dark:bg-blue-900"
  },
  {
    icon: BarChart,
    title: t('services.analytics', lang),
    desc: t('services.analytics.desc', lang),
    color: "bg-green-100 dark:bg-green-900"
  },
  {
    icon: Printer,
    title: t('services.shipping', lang),
    desc: t('services.shipping.desc', lang),
    color: "bg-yellow-100 dark:bg-yellow-900"
  },
  {
    icon: Globe,
    title: t('services.freeWebsite', lang),
    desc: t('services.freeWebsite.desc', lang),
    color: "bg-pink-100 dark:bg-pink-900"
  }
];
---

<Base title="Our Services | AstroPOS">
  <Navbar />
  
  <main class="py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 w-full">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h1 class="text-5xl font-black uppercase mb-6">{t('services.title', lang)}</h1>
        <p class="text-xl text-gray-600 dark:text-gray-300 font-bold">
          {t('services.subtitle', lang)}
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-8 mb-16">
        {services.map((service) => (
          <div class={`p-8 border-2 border-[var(--color-border)] ${service.color} shadow-[6px_6px_0px_0px_var(--color-shadow)] hover:-translate-y-2 transition-transform`}>
            <div class="w-16 h-16 bg-white border-2 border-black flex items-center justify-center mb-4 shadow-[2px_2px_0px_0px_black]">
              <service.icon size={32} class="text-black" />
            </div>
            <h3 class="text-2xl font-black mb-3 text-black dark:text-white">{service.title}</h3>
            <p class="text-gray-800 dark:text-gray-200 font-medium leading-relaxed">{service.desc}</p>
          </div>
        ))}
      </div>

      <div class="bg-black text-white p-12 border-2 border-black shadow-[8px_8px_0px_0px_black] text-center dark:bg-white dark:text-black">
        <h2 class="text-3xl font-black mb-4">{t('services.enterprise.title', lang)}</h2>
        <p class="text-lg mb-6 opacity-90">{t('services.enterprise.desc', lang)}</p>
        <Button href="mailto:enterprise@astropos.com" variant="primary">
          {t('services.enterprise.cta', lang)}
        </Button>
      </div>
    </div>
  </main>
</Base>
