---
import Base from '../../layouts/Base.astro';
import Navbar from '../../components/sections/Navbar.astro';
import Button from '../../components/common/Button.astro';
import { MonitorSmartphone, BarChart, Printer, Globe } from 'lucide-react';
import { getLangFromUrl, languages } from '../../lib/lang';

export async function getStaticPaths() {
  return Object.keys(languages).map(lang => ({ params: { lang } }));
}

const lang = getLangFromUrl(Astro.url);

const services = [
  {
    icon: MonitorSmartphone,
    title: "Multi-Channel Sync",
    desc: "Connect Facebook Page, Line OA, and TikTok Shop in one dashboard. Reply to chats and create orders without switching apps.",
    color: "bg-blue-100 dark:bg-blue-900"
  },
  {
    icon: BarChart,
    title: "Advanced Analytics",
    desc: "Know your best selling products, peak hours, and customer retention rates. Export reports to Excel easily.",
    color: "bg-green-100 dark:bg-green-900"
  },
  {
    icon: Printer,
    title: "Instant Shipping Labels",
    desc: "Generate flash/kerry/j&t tracking numbers instantly. Print 100x150mm labels via Bluetooth or USB.",
    color: "bg-yellow-100 dark:bg-yellow-900"
  },
  {
    icon: Globe,
    title: "Free Shop Website",
    desc: "Get a free [yourname].astropos.shop website for customers to browse catalog and self-checkout.",
    color: "bg-pink-100 dark:bg-pink-900"
  }
];
---

<Base title="Our Services | AstroPOS">
  <Navbar />
  
  <main class="py-20">
    <div class="container mx-auto px-4">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h1 class="text-5xl font-black uppercase mb-6">More Than Just a POS</h1>
        <p class="text-xl text-gray-600 dark:text-gray-300 font-bold">
          We provide a complete ecosystem for modern social sellers.
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-8 mb-20">
        {services.map((s, i) => (
          <div class={`p-8 border-2 border-[var(--color-border)] shadow-[8px_8px_0px_0px_var(--color-shadow)] ${s.color} hover:-translate-y-1 transition-transform`}>
            <s.icon size={48} className="mb-6 text-[var(--color-text)]" />
            <h3 class="text-3xl font-black mb-4 text-[var(--color-text)]">{s.title}</h3>
            <p class="text-lg font-medium leading-relaxed text-[var(--color-text)]">{s.desc}</p>
          </div>
        ))}
      </div>

      <div class="bg-black text-white p-12 text-center border-4 border-lime-400 dark:bg-gray-900">
        <h2 class="text-3xl font-black mb-6">Need a Custom Solution?</h2>
        <p class="text-xl mb-8">We offer API integrations for Enterprise clients.</p>
        <Button href="https://wa.me/8562012345678" class="bg-lime-400 text-black border-none hover:bg-lime-300">
          Contact Enterprise Sales
        </Button>
      </div>
    </div>
  </main>
</Base>
