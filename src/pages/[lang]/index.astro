  <script is:inline>
    (() => {
      const cta = document.querySelector('a[data-features-cta="true"]');
      const features = document.getElementById('features');

      if (!cta || !features) return;

      const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)');

      const runReveal = () => {
        features.removeAttribute('data-cta-reveal');
        void features.offsetWidth;
        features.setAttribute('data-cta-reveal', 'true');
        window.setTimeout(() => features.removeAttribute('data-cta-reveal'), 1000);
      };

      const revealWhenVisible = () => {
        const observer = new IntersectionObserver(
          (entries) => {
            if (entries.some((entry) => entry.isIntersecting)) {
              runReveal();
              observer.disconnect();
            }
          },
          { threshold: 0.25 }
        );

        observer.observe(features);
        window.setTimeout(() => observer.disconnect(), 2200);
      };

      cta.addEventListener('click', (event) => {
        event.preventDefault();
        features.scrollIntoView({
          behavior: prefersReducedMotion.matches ? 'auto' : 'smooth',
          block: 'start',
        });

        if (prefersReducedMotion.matches) {
          runReveal();
        } else {
          revealWhenVisible();
        }

        history.replaceState(null, '', '#features');
      });
    })();
