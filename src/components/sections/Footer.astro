---
import { getLangFromUrl } from '../../lib/lang';
import { t } from '../../data/i18n';
import { footerHelpCenterCopy, fromLang } from '../../data/localizedCopy';

const lang = getLangFromUrl(Astro.url);
const helpCenterLabel = fromLang(footerHelpCenterCopy, lang);
---

<footer class="py-12 border-t-2 border-[var(--color-border)] bg-[var(--color-bg-card)] text-[var(--color-text)]">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 w-full flex flex-col md:flex-row justify-between items-center gap-6">
    <p class="font-semibold text-sm tracking-tight">{t('footer.copyright', lang)}</p>
    
    <div class="flex flex-wrap justify-center gap-6 text-sm font-semibold">
      <a href={`/${lang}/help`} class="hover:underline underline-offset-4 decoration-2">
        {helpCenterLabel}
      </a>
      <a href={`/${lang}/about`} class="hover:underline underline-offset-4 decoration-2">
        {t('footer.about', lang)}
      </a>
      <a href={`/${lang}/#contact`} class="hover:underline underline-offset-4 decoration-2">
        {t('footer.contact', lang)}
      </a>
      <a href={`/${lang}/privacy`} class="hover:underline underline-offset-4 decoration-2">
        {t('footer.privacy', lang)}
      </a>
      <a href={`/${lang}/terms`} class="hover:underline underline-offset-4 decoration-2">
        {t('footer.terms', lang)}
      </a>
    </div>
  </div>
</footer>
