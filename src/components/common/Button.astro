---
interface Props {
  href?: string;
  variant?: 'primary' | 'secondary' | 'outline';
  class?: string;
  [key: string]: any;
}

const { href, variant = 'primary', class: className, ...rest } = Astro.props;

const baseClass = "px-6 py-3 font-bold border-2 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] active:translate-x-[2px] active:translate-y-[2px] active:shadow-[2px_2px_0px_0px_rgba(0,0,0,1)] transition-all duration-200 cursor-pointer inline-flex items-center justify-center gap-2 text-black";

const variants = {
  primary: "bg-[#a3e635] hover:bg-[#bef264]", // brand-primary
  secondary: "bg-[#f472b6] hover:bg-[#f9a8d4]", // brand-secondary
  outline: "bg-white hover:bg-gray-50",
};

const finalClass = `${baseClass} ${variants[variant]} ${className || ''}`;
---

{
  href ? (
    <a href={href} class={finalClass} {...rest}>
      <slot />
    </a>
  ) : (
    <button class={finalClass} {...rest}>
      <slot />
    </button>
  )
}
